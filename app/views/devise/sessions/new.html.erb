<fieldset>

  <%= form_for resource, :as => resource_name, :html => {:class=>"form-horizontal"}, :url => session_path(resource_name)  do |f| %>
<h2 class="form-signin-heading">Войти</h2>
  <div class='control-group'><%= f.label :email, :class=>"control-label" %>
    <div class='controls'>
      <%= f.email_field :email, :autofocus => true %>
    </div>
  </div>
  <div class='control-group'><%= f.label 'Пароль', :class=>"control-label" %>
    <div class='controls'>
      <%= f.password_field :password %>
    </div>
  </div>
    <div class='control-group'>
    <div class='controls'>
      <%= f.submit "Вход", :class=>"btn" %>  
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</fieldset> <!-- /fieldset -->