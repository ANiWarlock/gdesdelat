<%= stylesheet_link_tag 'low_level' %>
<%= semantic_form_for @company, :html => { :class => 'form-horizontal', :multipart => true} do |f| %>
  <div class="control-group">
    <%= f.label "Название", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Слоган", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :slogan, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Телефон", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phone, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Адрес", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Контактное лицо", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :contact_person, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Сайт", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :site, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "О компании", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :notes, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Услуги", :class => 'control-label' %>
    <div class="controls">
      <%= f.input :services, :as => :check_boxes, :label => ''  %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Загрузить логотип", :class => 'control-label' %>
    <div class="controls">
      <%= f.input :logo, :as => :file  %>
    </div>
  </div>



  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                companies_path, :class => 'btn' %>
  </div>
<% end %>
