<h3>Все компании: </h3>

<table class="table table-striped">
  <tbody>
    <% @companies.each do |company| %>
    <tr>
      <td>
        <%= image_tag(company.logo_url, :height => "60px", :width => "100px", :class => "logo_index") %>
      </td>
      <td>
        <h4><%=link_to company.name, company %></h4>
      </td>
    </tr>
    <% end %> 
  </tbody>
</table>